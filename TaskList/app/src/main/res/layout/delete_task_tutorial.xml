<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay">
    <Button android:id="@+id/help_ok"
            style="@style/tutorial_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="100dp"
            android:background="@color/help_button"
        />

    <TextView android:id="@+id/action_bar_text"
              style="@style/tutorial_font"
              android:layout_margin="10dp"
              android:text="@string/tutorial_swipe_to_delete"
              android:layout_below="@+id/slider_touch"
        />

    <ImageView android:id="@+id/slider_touch"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="40dp"
               android:background="@drawable/touch"
               android:layout_marginTop="86dp"/>

</RelativeLayout>